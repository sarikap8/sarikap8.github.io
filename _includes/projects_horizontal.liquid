<div class="col mb-4">
  <div class="card h-100 hoverable">
    <div class="row no-gutters">
      {% if project.img %}
        <div class="col-md-4">
          <img src="{{ project.img | relative_url }}" class="card-img" alt="{{ project.title }}" />
        </div>
      {% endif %}
      <div class="col-md-{% if project.img %}8{% else %}12{% endif %}">
        <div class="card-body">
          <h5 class="card-title">{{ project.title }}</h5>
          <p class="card-text">{{ project.description }}</p>
          <a href="{{ project.url | relative_url }}" class="stretched-link"></a>
        </div>
      </div>
    </div>
  </div>
</div>
